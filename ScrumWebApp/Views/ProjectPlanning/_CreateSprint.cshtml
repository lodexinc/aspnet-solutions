@model Scrum.Application.Commands.CreateSprintCommand
@using Newtonsoft.Json

<div class="row" ng-controller="CreateSprintController as self"
     ng-init="self.init(@JsonConvert.SerializeObject(Model))">
    <form id="createSprintForm" name="createSprintForm"
          valdr-type="CreateSprint" novalidate
          role="form"
          ng-submit="createSprintForm.$valid && self.createSprint()">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="modal-header">
                <h3 class="modal-title">Create Sprint</h3>
            </div>

            <div class="modal-body">
                <style type="text/css" ng-bind-html="self.modalHeight"></style>

                <div class="form-group" valdr-form-group>
                    <label for="summary" class="control-label">Sprint name <span class="text-danger">*</span></label>
                    <div>
                        <input id="sprintName" name="sprintName" type="text" class="form-control" ng-model="self.Sprint.Name" placeholder="Enter name" />
                    </div>
                </div>

                <div class="form-group" valdr-form-group>
                    <label for="reporter" class="control-label">Sprint goal</label>
                    <div>
                        <input id="sprintGoal" name="sprintGoal" type="text" class="form-control" ng-model="self.Sprint.Goal" placeholder="Enter a goal" />
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button data-spinner-color="black" data-style="zoom-in" ng-ladda="createSprint" class="btn btn-primary" type="submit" ng-disabled="createSprintForm.$invalid">Create</button>
                <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
            </div>
        </div>
    </form>
</div>