
<div class="row" ng-controller="CreateProjectController as self">
    <form id="createProjectForm" name="createProjectForm" class="form-horizontal"
          valdr-type="CreateProject" novalidate
          role="form"
          ng-submit="createProjectForm.$valid && self.createProject()">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="modal-header">
                <h3 class="modal-title">Create project</h3>
            </div>

            <div class="modal-body">
                <style type="text/css" ng-bind-html="self.modalHeight"></style>

                <div class="form-group" valdr-form-group>
                    <label for="summary" class="control-label  col-md-2  col-sm-4">Name <span class="text-danger">*</span></label>
                    <div class="col-sm-8">
                        <input id="projectName" name="projectName" type="text" class="form-control" ng-model="self.CreateProjectCommand.name" placeholder="Enter name" />
                    </div>
                </div>

                <div class="form-group" valdr-form-group>
                    <label for="reporter" class="control-label  col-md-2  col-sm-4">Key <span class="text-danger">*</span></label>
                    <div class="col-sm-8">
                        <input id="projectKey" name="projectKey" type="text" class="form-control" ng-model="self.CreateProjectCommand.key" placeholder="Enter a key" />
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button data-spinner-color="black" data-style="zoom-in" ng-ladda="createProject" class="btn btn-primary" type="submit" ng-disabled="createProjectForm.$invalid">Create</button>
                <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
            </div>
        </div>
    </form>
</div>