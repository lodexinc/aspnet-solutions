@{
    ViewBag.Title = "Home Page";
}

@section scripts {
    <script src="~/Scripts/App/Home/home.module.js"></script>

    @*<script type="text/javascript" src="~/Scripts/App/Home/Controllers/home.controller.js"></script>*@
}

@section jsCode {
    angular.bootstrap(document.getElementById("mainBody"), ['HomeModule']);
}

@{ 
    var homeModule = Request.Url.AbsolutePath + "/Scripts/App/Home/Controllers/home.controller.js";
    homeModule = HttpContext.Current.Request.Url.Scheme + "://" + HttpContext.Current.Request.Url.Authority + "/Scripts/App/Home/Controllers/home.controller.js";


}

<cube-grid-spinner id="spinInModal" compile-after="homeModuleReady" script-url="@homeModule"></cube-grid-spinner>


