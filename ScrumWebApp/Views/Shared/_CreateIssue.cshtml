
<div class="row" ng-controller="CreateIssueController as self">
    <form id="createIssueForm" name="createIssueForm"
          valdr-type="CreateIssue" novalidate
          role="form"
          ng-submit="createIssueForm.$valid && self.createIssue()">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="modal-header">
                <h3 class="modal-title">Create issue</h3>
            </div>

            <div class="modal-body">
                <style type="text/css" ng-bind-html="self.modalHeight"></style>

                <div class="form-group" valdr-form-group>
                    <label for="ProjectID" class="control-label">Project<span class="text-danger">*</span></label>
                    <div class="row">
                        <div class="col-md-6">
                            <ui-select ng-model="self.ProjectSelected">
                                <ui-select-match>
                                    <span ng-bind="$select.selected.Name"></span>
                                </ui-select-match>
                                <ui-select-choices repeat="project in (self.projects | filter: $select.search) track by project.ID" 
                                                   refresh="self.refreshProjects($select.search)"
                                                   refresh-delay="0">
                                    <span ng-bind="project.Name"></span>
                                </ui-select-choices>
                            </ui-select>
                        </div>

                    </div>
                </div>

                <div class="form-group" valdr-form-group>
                    <label for="IssueTypeID" class="control-label">Issue Type<span class="text-danger">*</span></label>
                    <div class="row">
                        <ui-select id="IssueTypeID" enable-valdr-validation enable-valdr-message name="IssueTypeID" class="col-md-6" ng-model="self.CreateIssueCommand.IssueTypeID" theme="bootstrap">
                            <ui-select-match placeholder="Select or search a issue type">{{$select.selected.name}}</ui-select-match>
                            <ui-select-choices repeat="item in ctrl.people | filter: $select.search">
                                <div ng-bind-html="item.name | highlight: $select.search"></div>
                                <small ng-bind-html="item.email | highlight: $select.search"></small>
                            </ui-select-choices>
                        </ui-select>
                    </div>
                </div>
                <div class="form-group" valdr-form-group>
                    <label for="Summary" class="control-label">Summary <span class="text-danger">*</span></label>
                    <div>
                        <input id="Summary" name="Summary" type="text" class="form-control" ng-model="self.CreateIssueCommand.Summary" placeholder="Enter summary" />
                    </div>
                </div>

                <div class="form-group" valdr-form-group>
                    <label for="ReporterID" class="control-label">Reporter <span class="text-danger">*</span></label>
                    <div>
                        <input id="ReporterID" name="ReporterID" type="text" class="form-control" ng-model="self.CreateIssueCommand.ReporterID" placeholder="Enter reporter" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="Description" class="control-label">Description</label>
                    <div>
                        <textarea name="Description" class="form-control" ng-model="self.CreateIssueCommand.Description" rows="5"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label for="PriorityID" class="control-label">Priority</label>
                    <div class="row">
                        <ui-select name="PriorityID" class="col-md-6" ng-model="self.CreateIssueCommand.PriorityID" theme="bootstrap">
                            <ui-select-match>{{$select.selected.name}}</ui-select-match>
                            <ui-select-choices repeat="item in ctrl.people | filter: $select.search">
                                <div ng-bind-html="item.name | highlight: $select.search"></div>
                                <small ng-bind-html="item.email | highlight: $select.search"></small>
                            </ui-select-choices>
                        </ui-select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Attachment" class="control-label">Attachment</label>
                    <div>
                        <span class="form-control">Drop file to attach or <a href="">Browse.</a></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="AssigneeID" class="control-label">Assignee</label>
                    <div class="row">
                        <ui-select name="AssigneeID" class="col-md-6" ng-model="self.CreateIssueCommand.AssigneeID" theme="bootstrap">
                            <ui-select-match>{{$select.selected.name}}</ui-select-match>
                            <ui-select-choices repeat="item in ctrl.people | filter: $select.search">
                                <div ng-bind-html="item.name | highlight: $select.search"></div>
                                <small ng-bind-html="item.email | highlight: $select.search"></small>
                            </ui-select-choices>
                        </ui-select>

                    </div>
                    <a href="">Assign to me</a>
                </div>

                <div class="form-group">
                    <label for="SprintID" class="control-label">Sprint</label>
                    <div class="row">
                        <ui-select name="SprintID" class="col-md-6" ng-model="self.CreateIssueCommand.SprintID" theme="bootstrap">
                            <ui-select-match>{{$select.selected.name}}</ui-select-match>
                            <ui-select-choices repeat="item in ctrl.people | filter: $select.search">
                                <div ng-bind-html="item.name | highlight: $select.search"></div>
                                <small ng-bind-html="item.email | highlight: $select.search"></small>
                            </ui-select-choices>
                        </ui-select>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <checkbox id="createAnother" ng-model="self.createOtherIssue"></checkbox>
                <label for="createAnother">
                    Create another
                </label>
                <button data-spinner-color="black" data-style="zoom-in" ng-ladda="CreateIssue" class="btn btn-primary" type="submit" ng-disabled="createIssueForm.$invalid">Create</button>
                <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
            </div>
        </div>
    </form>
</div>